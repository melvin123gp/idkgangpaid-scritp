    end
})

local Button = MainTab:CreateButton({
    Name = "Low HP Run",
    Callback = function()

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

local isTeleporting = false -- Teleport i≈üleminin s√ºrekli olmasƒ±nƒ± kontrol eder.

-- Karakteri bir defa teleport eden fonksiyon
local function teleportStep()
    local direction = character.HumanoidRootPart.CFrame.LookVector -- Karakterin baktƒ±ƒüƒ± y√∂n
    local newPosition = character.HumanoidRootPart.Position + direction * 10 -- 10 birim ileri
    character:SetPrimaryPartCFrame(CFrame.new(newPosition))
end

-- Teleport i≈ülemini ba≈ülatan ve durduran fonksiyon
local function manageTeleport()
    if humanoid.Health <= 20 and not isTeleporting then
        isTeleporting = true
        -- Teleport i≈ülemi ba≈ülasƒ±n (20 can altƒ±nda s√ºrekli yapacak)
        while isTeleporting do
            teleportStep()
            wait(0.1) -- Her teleport arasƒ±nda kƒ±sa bir bekleme
        end
    elseif humanoid.Health >= 23 and isTeleporting then
        -- Teleport i≈ülemini durdur
        isTeleporting = false
    end
end

-- Saƒülƒ±k deƒüi≈üimlerini dinle
humanoid.HealthChanged:Connect(function()
    manageTeleport()
end)

    end
})

